<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/window_fade</item>
        <item name="android:windowExitTransition">@transition/window_fade</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Text.PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Text.PopupMenu</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:listPreferredItemHeightLarge">48dp</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="buttonBarButtonStyle">@style/BarButton</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="BarButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Button.Bar</item>
        <item name="android:gravity">start|top</item>
        <item name="android:padding">24dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Button.Small">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="DialogTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/Text.Button.Dialog</item>
    </style>

    <style name="Text.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/button_text_selector</item>
    </style>

    <style name="Text.Button.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Text.Button.Bar">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.NoEnterTransitions">
        <item name="android:windowEnterTransition" tools:targetApi="l">@null</item>
    </style>

    <style name="AppTheme.NoExitTransitions">
        <item name="android:windowExitTransition" tools:targetApi="l">@null</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

    <style name="ActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="Text" />

    <style name="Text.Body1">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.Body1.Secondary">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_700</item>
    </style>

    <style name="Text.Body2">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Text.Body2.Progress">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textColor">@color/progress_text</item>
    </style>

    <style name="Text.Body3">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body4">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.Title1">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title1.NavigationButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Title1.Small">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Title1.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.Title2">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Text.Title3">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textColor">@color/blue_grey_400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.Title4">
        <item name="android:fontFamily">@font/noto_sans_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Small1">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Small2">
        <item name="android:fontFamily">@font/noto_sans_italic</item>
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup</item>
        <item name="android:dropDownHorizontalOffset">-16dp</item>
        <item name="android:dropDownVerticalOffset">20dp</item>
    </style>

    <style name="Text.PopupMenu">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textColor">@color/blue_grey_900</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_hor_states_selector</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="progressColor">@color/yellow_a700</item>
        <item name="successColor">@color/green_a700</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@drawable/bg_tab_layout</item>
        <item name="tabBackground">@drawable/bg_page_button</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/Text.Title1.Tab</item>
        <item name="tabTextColor">@color/blue_grey_900</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Text.Title1.Tab">
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NavigationButton">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textAppearance">@style/Text.Title1.NavigationButton</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="NavigationButton.Left">
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">@drawable/bg_btn_prev</item>
    </style>

    <style name="NavigationButton.Right">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/bg_btn_next</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/radio_selector</item>\
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/radio_selector</item>\
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="SheetSelectorItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">@style/Text.Body1</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_sheet</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

</resources>